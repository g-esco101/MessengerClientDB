@model MessengerClientDB.Models.Messages

@{
    ViewBag.Title = "Archive";
}

<h4>Gets messages that are stored at the archive service. It does not save messages that are already in the database.</h4>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input id="CheckboxReceived" name="CBReceived" value="true" type="checkbox" />
                    @Html.Label("CheckboxReceived", "Received messages", htmlAttributes: new { @AssociatedControlID = "CheckboxReceived" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input id="CheckboxSent" name="CBSent" value="true" type="checkbox" />
                    @Html.Label("CheckboxSent", "Sent messages", htmlAttributes: new { @AssociatedControlID = "CheckboxSent" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Get" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", "Messages")
</div>