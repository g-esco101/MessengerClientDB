@model MessengerClientDB.Models.ViewModels.QueueDeleteVM

@{

    ViewBag.Title = "QueueDelete";
}
<h2>Queue Delete</h2>

<h5>Deletes messages that are stored in the service database.</h5>


@using (Html.BeginForm("QueueDelete", "Messages", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Sender, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Sender, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Sender, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Delete" class="btn btn-default" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @ViewBag.DeleteCount
        </div>
    </div>
</div>
}


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(modelItem => modelItem.InInbox.First().SenderID)
        </th>
        <th>
            @Html.DisplayNameFor(modelItem => modelItem.InInbox.First().ReceiverID)
        </th>
        <th>
            @Html.DisplayNameFor(modelItem => modelItem.InInbox.First().Date)
        </th>
        <th>
            @Html.DisplayNameFor(modelItem => modelItem.InInbox.First().Time)
        </th>
        <th>
            @Html.DisplayNameFor(modelItem => modelItem.InInbox.First().Contents)
        </th>
        <th>
            @Html.DisplayNameFor(modelItem => modelItem.InInbox.First().Read)
        </th>
        <th>
            @Html.DisplayNameFor(modelItem => modelItem.InInbox.First().Inbox)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.InInbox)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SenderID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReceiverID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Time)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Contents)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Read)
        </td>
        <td>
            @if (item.Inbox)
            {
                <h5>yes</h5>
            }
            else
            {
                <h5>no</h5>
            }
        </td>
    </tr>
    }

</table>
<p>
    @Html.ActionLink("Inbox", "Inbox", "Messages") |
    @Html.ActionLink("Sent", "Sent", "Messages")
</p>