@{
    ViewBag.Title = "Remove";
}

<h2>Removes messages from the sender stored at the service.</h2>


@using (Html.BeginForm())
{

    <div class="form-horizontal">
        <h4>Message</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("ReceiveId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("receiveid")
                @Html.ValidationMessage("receiveid", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Remove" class="btn btn-default" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @ViewBag.DeleteCount
            </div>
        </div>

    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", "Messages")
</div>